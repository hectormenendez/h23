# Use PHP5 as default
AddHandler application/x-httpd-php .php .html .csx .jx
AddHandler text/x-component .htc

AddCharset UTF-8 .html .xml .php .csx .jx

ErrorDocument 404 ./inc/404.html
ErrorDocument 403 ./inc/403.html
ErrorDocument 500 ./inc/500.html

Options -Indexes

RewriteEngine on
RewriteCond $1 !^(index\.php|inc|robots\.txt|favicon\.ico)
RewriteRule ^(.*)$ index.php/$1 [L]
